---
import Layout from "../layouts/Layout.astro";
import FlashcardList from "../components/flashcards/FlashcardList.tsx";

const { user } = Astro.locals;

if (!user) {
  return Astro.redirect("/auth/login");
}

const userJson = user ? JSON.stringify(user) : null;
---

<Layout title="Fiszki - 10xDevs">
  <div class="min-h-screen bg-background">
    <div
      class="relative max-w-7xl mx-auto backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 text-white border border-white/10"
    >
      <div class="space-y-8">
        <!-- Header -->
        <div class="text-center">
          <h1
            class="text-5xl font-bold mb-4 bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 text-transparent bg-clip-text drop-shadow-lg"
          >
            Fiszki React
          </h1>
          <p class="text-xl text-blue-100/90 drop-shadow-md">
            Ucz się programowania w React poprzez interaktywne fiszki
          </p>
        </div>

        <!-- Flashcards Component -->
        <FlashcardList client:load userJson={userJson} />

        <!-- Info banner for non-authenticated users -->
        {!user && (
          <div class="text-center mt-8 p-6 bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-lg rounded-xl border border-blue-500/20">
            <div class="flex flex-col items-center gap-4">
              <div class="flex items-center gap-2">
                <svg class="h-6 w-6 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
                <h3 class="text-lg font-semibold text-blue-200">To są przykładowe fiszki</h3>
              </div>
              <p class="text-blue-100/80 max-w-2xl">
                Aby generować własne fiszki z AI i zapisywać je w swoim koncie, musisz się zalogować.
              </p>
            </div>
          </div>
        )}

        <!-- Back Link -->
        <div class="text-center mt-8">
          <a
            href="/"
            class="inline-flex items-center space-x-2 px-6 py-3 bg-gradient-to-r from-blue-500/20 to-purple-500/20 backdrop-blur-lg rounded-lg border border-white/10 hover:border-white/30 transition-all duration-300 text-blue-100 hover:text-white"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"
              ></path>
            </svg>
            <span>Powrót do strony głównej</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
